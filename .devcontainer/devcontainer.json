{
    "name": "Odoo Dev Environment",
    "dockerComposeFile": ["../docker-compose.yml", "docker-compose.extend.yml"],
    "service": "odoo",
    "workspaceFolder": "/opt/custom", // Set where you want to mount your local project folder
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "odoo.odoo@prerelease",
                "charliermarsh.ruff",
                "github.vscode-pull-request-github",
                "trinhanhngoc.vscode-odoo",
                "mvintg.odoo-file",
                "redhat.vscode-xml",
                "esbenp.prettier-vscode",
                "github.vscode-github-actions"
            ],
            "settings": {
                "python.languageServer": "None"
            }
        }
    }
}